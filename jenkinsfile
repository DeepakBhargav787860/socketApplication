pipeline {
    agent any

    stages {
        stage('Build) {
            steps {
               git branch: 'main', url: 'https://github.com/DeepakBhargav787860/socketApplication.git'
                echo "Branch name: ${env.BRANCH_NAME}"
            
            }
        }

        stage('Install') {
            steps {
               echo "install: ${env.BRANCH_NAME}"
            }
        }

        stage('Branch Logic') {
            steps {
                script {
                    if (env.BRANCH_NAME == 'main') {
                        echo "Main branch logic"
                     
                    } else if (env.BRANCH_NAME == 'dev') {
                        echo "Dev branch logic"
                      
                    } else {
                        echo "Other branch logic"
                    }
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline completed.'
        }
    }
}
